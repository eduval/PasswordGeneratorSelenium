pipeline {
  agent any
  environment {
    FIREBASE_DEPLOY_TOKEN = credentials('firebase-token')
  }  
  stages{
    stage('Building'){
        steps{
            echo 'Building'
        }
    }
    stage('Testing'){
        steps{
            sh 'firebase deploy -P devops-proj-testing.web.app --token "$FIREBASE_DEPLOY_TOKEN"'  
        }
    }
    stage('Staging'){
        steps{
          sh 'firebase deploy -P devops-proj-staging.web.app --token "$FIREBASE_DEPLOY_TOKEN"'
        }
    }
    stage('Production'){
        steps{
               sh 'firebase deploy -P devops-proj-production-bcfd9 --token "$FIREBASE_DEPLOY_TOKEN"'
        }
    }
  }
}